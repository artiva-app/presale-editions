{
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@rari-capital/solmate": "^6.3.0",
    "base64-sol": "^1.0.1"
  },
  "files": [
    "./dist/**/*",
    "./dist/*"
  ],
  "devDependencies": {
    "@typechain/ethers-v5": "^10.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.1",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
